#------------------------------------------------------------
# Find path to this script
#------------------------------------------------------------

exe_path=""
if test -L "$0" ; then
  exe_path=`readlink "$0"`
else
  exe_path="$0"
fi

exe_dir=`dirname "$exe_path"`

#------------------------------------------------------------
# 
#------------------------------------------------------------

preload_libs="${exe_dir}/libmpitime.so"

#echo "${exe_path}: ${preload_libs}"
export LD_PRELOAD="${preload_libs} ${LD_PRELOAD}"

#LD_DEBUG=all
exec "$@"
